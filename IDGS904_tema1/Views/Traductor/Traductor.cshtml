@model IDGS904_tema1.Models.Traductor

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Traductor</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Ingles, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Ingles, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Ingles, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Español, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Español, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Español, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-outline-success" />
                        </div>
                    </div>
                </div>
            }
            @using (Html.BeginForm("LeerDatos", "Traductor",FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Mostrar Tabla" class="btn btn-outline-info" />
                    </div>
                </div>
            }
            @using (Html.BeginForm("Traductor", "Traductor", FormMethod.Get))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Ocultar Tabla" class="btn btn-outline-danger" />
                    </div>
                </div>
            }
        </div>
       
    <div class="col-6">
        @if (ViewBag.ArchivoTraductor != null)
        {
            <table class="table table-success table-striped">
                <thead>
                    <tr>
                        <th class="text-center" scope="col">Español</th>
                        <th class="text-center" scope="col">Ingles</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (string tem in ViewBag.ArchivoTraductor)
                    {
                        <tr>
                            @foreach (string item in tem.Split(','))
                            {
                                <td style="text-align: center">@item</td>
                            }
                        </tr>
                    }
                    
                </tbody>
            </table>
        }
        </div>
    </div>
</div>













